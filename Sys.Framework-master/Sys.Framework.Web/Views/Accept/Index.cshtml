@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#main-li').removeClass('active');
            $('#robot-li').addClass("active open");
            $('#robot-li-transaction').addClass("active");
            var html = `<li><a href="#">系统设置</a></li><li class="active">受理信息</li>`;
            $('.breadcrumb').append(html);
        })
    </script>

    <script type="text/javascript">
        $(function () {
            $('#myTable').bootstrapTable({
                method: 'post',
                url: "/Accept/GetData",
                //height: $(window).height() - 200,
                striped: false,
                dataType: "json",
                pagination: true,
                "queryParamsType": "limit",
                singleSelect: false,
                contentType: "application/x-www-form-urlencoded",
                pageSize: 10,
                pageNumber: 1,
                search: true, //不显示 搜索框
                showColumns: false, //不显示下拉框（选择显示的列）
                sortable: false,
                sortOrder: "asc",                   //排序方式
                sidePagination: "server", //服务端请求
                uniqueId: "Id",                     //每一行的唯一标识，一般为主键列
                queryParams: queryParams,
                //showColumns: true,                  //是否显示所有的列
                pageList: [10, 15, 25, 50, 100],        //可供选择的每页的行数（*）
                //showRefresh: true,//是否显示刷新按钮
                clickToSelect: true,                //是否启用点击选中行
                responseHandler: responseHandler,
                columns: [{
                    field: '',//F_Id, F_No, F_Status, F_Remark, F_CreateTime
                    checkbox: true
                }, {
                    field: 'F_No',
                    title: '账号'
                }, {
                    field: 'F_Remark',
                    title: '备注'
                }, {
                    field: 'F_CreateTime',
                    title: '时间'
                }, {
                    field: 'F_Status',
                    title: '状态',
                    formatter: function (value, row, index) {
                        return value == 1 ? "成功" : "失败";
                    }
                }]
            });

        });

        //请求响应
        function responseHandler(res) {
            if (res.IsOk) {
                return {
                    "rows": res.rows,
                    "total": res.total
                };
            } else {
                return {
                    "rows": [],
                    "total": 0
                };
            }
        }

        //传递的参数
        function queryParams(params) {
            return {
                limit: params.limit,//页面大小
                offset: params.offset,//页面
                key: params.search//搜索关键字
            };
        }
    </script>
}
