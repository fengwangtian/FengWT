@model Sys.Framework.Model.Sys.T_Sys_User
@{
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}
@section scripts{
    <script type="text/javascript">
        function onSave() {
            console.log("开始执行保存...");
            var data = $('#myForm').serialize();
            $.post('/UserCenter/ModifyPassword', data, function (result) {
                return $lsy.callbackDialog(result, false);
            })
        }
    </script>
}
<form id="myForm" class="form-horizontal" role="form">
    <input type="hidden" name="F_Id" value="@Model.F_Id" />
    <div class="form-group">
        <label class="col-sm-2 control-label">用户名</label>
        <div class="col-sm-6">
            <input type="text" name="F_Account" class="form-control" placeholder="用户名" value="@Model.F_Account">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">原始密码</label>
        <div class="col-sm-6">
            <input type="password" name="OldPassword" class="form-control" placeholder="原始密码">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">新密码</label>
        <div class="col-sm-6">
            <input type="password" name="NewPassowrd" class="form-control" placeholder="新密码">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">确认密码</label>
        <div class="col-sm-6">
            <input type="password" name="NewPassword2" class="form-control" placeholder="确认密码">
        </div>
    </div>
</form>
